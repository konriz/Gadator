<?xml version="1.0" encoding="UTF-8" ?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="createTables" author="konriz">

        <createTable tableName="conversations">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <createTable tableName="messages">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user" type="varchar(100)">
                <constraints nullable="false"/>
            </column>
            <column name="sent_date" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="TEXT"/>
            <column name="conversation_id" type="int">
                <constraints foreignKeyName="fk_id" references="conversations(id)"/>
            </column>
        </createTable>

    </changeSet>

</databaseChangeLog>